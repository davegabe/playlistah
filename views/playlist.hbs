<script src="/socket.io/socket.io.js"></script>
<script src="https://www.youtube.com/iframe_api"></script>
<script src="/js/playlist.js"></script>
<nav class="navbar navbar-dark bg-dark">
    <a style="color:white" href="/../.." role="button">&lt;</a>
    <span class="mx-auto">{{name}}</span>
</nav>
<div id="alerts"></div>
<div class="site-content container-fluid">
    <ul id="videos-list" class="list-group"></ul>
</div>
<div class="modal fade" id="searchModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add song</h4>
                <button type="button" class="close" data-dismiss="modal">Ã—</button>
            </div>
            <div class="modal-body">
                <div class="fieldcontainer">
                    <input type="search" id="query" class="form-control" placeholder="Search YouTube"
                        onkeyup="return submitSearch()">
                </div>
                </br>
                <ul id="results" class="list-group"></ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<footer class="footer">
    <div class="embed-responsive embed-responsive-16by9 video">
        <div id="player" class="embed-responsive-item"></div>
    </div>
    <button type="button" onclick="openDialog()" class="btn btn-info btn-lg" data-toggle="modal"
        data-target="#searchModal">Add video</button>
    <div class="float-right">
        <button id="arrowHide" type="button" onclick="showPlayer()" class="btn btn-outline-dark btn-lg">V</button>
    </div>
</footer>