
    <div class="form container">
        <h1>Create Playlist</h1>
        <form action="/" class="formPlaylist" method="POST">
            <label for="name">Title</label>
            <input id="name" type="text" class="form-control" name="name" pattern="[a-zA-Z0-9_]{1,100}" title="Only letters, numbers and underscore accepted" required />
                <div class="form-check">
                    <label class="form-check-label" for="isTemporary">
                        Temporary
                    </label>
                    <input class="form-check-input" type="checkbox" value="1" name="isTemporary"  id="isTemporary">
                </div>
                </br>
            <input type="submit" class="btn btn-light" value="Submit" />
        </form>
    </div>